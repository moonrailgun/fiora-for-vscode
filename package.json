{
  "name": "fiora-for-vscode",
  "displayName": "fiora-for-vscode",
  "description": "A VSCode Extension which bring fiora into your workspace.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fiora-chat-container",
          "title": "Fiora",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "fiora-chat-view-explorer",
          "name": "Fiora"
        }
      ],
      "fiora-chat-container": [
        {
          "id": "fiora-chat-view",
          "name": "Fiora"
        }
      ]
    },
    "commands": [
      {
        "command": "fiora-for-vscode.helloWorld",
        "category": "fiora-for-vscode",
        "title": "Hello World"
      },
      {
        "command": "fiora-for-vscode.login",
        "category": "fiora-for-vscode",
        "title": "Login Fiora"
      },
      {
        "command": "fiora-for-vscode.refresh",
        "category": "fiora-for-vscode",
        "title": "Refresh Message"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Fiora for Vscode",
      "properties": {
        "fiora-for-vscode.token": {
          "type": "string",
          "description": "Your Fiora Token",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "prettier:all": "prettier --write \"./**/*.{ts,tsx,json}\" --config ./.prettierrc.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/socket.io-client": "1.4.32",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "socket.io-client": "2.2.0"
  }
}
